    <rule name="NoModifyAll"
          language="xml"
          message="We want _no_ instances where modifyAllRecords is true."
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                        //PermissionSet/objectPermissions/modifyAllRecords/text[@Text = "true"]
                        ]]>
                </value>
            </property>
        </properties>
    </rule>
</ruleset>
